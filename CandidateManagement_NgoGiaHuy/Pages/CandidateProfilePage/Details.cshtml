@page
@model CandidateManagement_NgoGiaHuy.Pages.CandidateProfilePage.DetailsModel

@{
    ViewData["Title"] = "Candidate Profile Details";
    String RoleID = HttpContext.Session.GetString("RoleID") ?? "";
    if (RoleID != "1" && RoleID != "2")
    {
        Response.Redirect("/NoPermission");
    }
}

<h1>Details</h1>

<div>
    <h4>CandidateProfile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateProfile.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CandidateProfile.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateProfile.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Model.CandidateProfile.Birthday.Value.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateProfile.ProfileShortDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CandidateProfile.ProfileShortDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateProfile.ProfileUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CandidateProfile.ProfileUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CandidateProfile.Posting)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CandidateProfile.Posting.JobPostingTitle)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CandidateProfile?.CandidateId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
